<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="25dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/textview_question_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#1d1e1f"
        android:letterSpacing="0.01"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="200dp"
            android:layout_weight="0"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textview_question_content"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="15sp"
                    android:textColor="#5d5f62"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4sp" />
                <TextView
                    android:id="@+id/textview_question_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="13sp"
                    android:textColor="#6f7276"
                    android:letterSpacing="0.01"
                    android:layout_above="@+id/constrainlayout_question_row_layout"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrainlayout_question_row_layout"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/coin"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:id="@+id/textview_question_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.02"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:gravity="center"
                            tools:text="12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/time_grey" />
                        <TextView
                            android:id="@+id/textview_question_remaining_time"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            android:textColor="#5d5f62"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="0sp"
                            tools:text="4h 23m"
                            android:gravity="center"/>
                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0"></LinearLayout>
</LinearLayout>