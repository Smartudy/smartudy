<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fragment_write"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharewith.smartudy.fragment.WriteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/write_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:fontFamily="@string/main_font"
            android:hint="제목"
            android:lines="2"
            android:paddingLeft="10dp"
            android:scrollbars="vertical"
            android:textColor="#1d1e1f"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/write_fragment_recycler"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/write_fragment_bottombar"
            android:layout_below="@id/write_title"
            android:background="#f9f9f9"
            android:padding="16dp"/>

        <LinearLayout
            android:id="@+id/write_fragment_bottombar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/write_fragment_bottom1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bottom_1" />

            <ImageView
                android:id="@+id/write_fragment_bottom2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bottom_2" />

            <ImageView
                android:id="@+id/write_fragment_bottom3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bottom_3" />

            <ImageView
                android:id="@+id/write_fragment_bottom4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bottom_4" />

            <ImageView
                android:id="@+id/write_fragment_bottom5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bottom_5" />
        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
