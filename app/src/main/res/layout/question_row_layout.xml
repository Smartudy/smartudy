<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_background_radius_3dp"
    android:layout_marginBottom="8dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/textview_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0.01"
        android:textColor="#1d1e1f"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_question_content"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_question_content"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4sp"
                    android:textColor="#5d5f62"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_question_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:letterSpacing="0.01"
                    android:textColor="#6f7276"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp">

                    <ImageView
                        android:id="@+id/question_row_layout_coin_image"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/textview_question_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/question_row_layout_coin_image"
                        android:layout_alignParentTop="true"
                        android:padding="1dp"
                        android:fontFamily="@font/nanumsquareeb"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        tools:text="1000" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/textview_question_remaining_time"
                        android:paddingTop="2dp"
                        android:src="@drawable/time_grey" />

                    <TextView
                        android:id="@+id/textview_question_remaining_time"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="0sp"
                        android:paddingLeft="2dp"
                        android:textColor="#775d5f62"
                        android:textSize="12sp"
                        tools:text="4h 23m" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>