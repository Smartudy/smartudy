<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="25dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/textview_question_title"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textColor="#1d1e1f"
        android:letterSpacing="0.01"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_question_content"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="12sp"
                    android:textColor="#5d5f62"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4sp" />
                <TextView
                    android:id="@+id/textview_question_hashtag"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="11sp"
                    android:textColor="#6f7276"
                    android:letterSpacing="0.01"/>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/coin"
                            android:layout_marginRight="4dp"/>
                        <TextView
                            android:id="@+id/textview_question_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:letterSpacing="0.02"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            tools:text="12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/time_grey" />
                        <TextView
                            android:id="@+id/textview_question_remaining_time"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:textColor="#5d5f62"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="0sp"
                            tools:text="4h 23m" />
                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>